@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Edit";
}

<section class="CreateCat">


    <div class="topClass">
        <div class="TopBar" data-aos="slide-right">
            <div class="backSection">
                <div>
                    <button>
                        <a asp-action="Index">
                            <img src="~/img/imgback.png" />
                        </a>

                    </button>
                </div>
            </div>
            <h4>Edit Expense</h4>
        </div>

        <div class="left-img" data-aos="slide-right">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExpenseId" />
            <div class="form-group">
                <label asp-for="ExpenseTitle" class="control-label"></label>
                            <div style="width:250px">
                <input asp-for="ExpenseTitle" class="form-control" />
                </div>
                <span asp-validation-for="ExpenseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseAmount" class="control-label"></label>
                <div style="width:250px">
                <input asp-for="ExpenseAmount" class="form-control" />
                </div>
                <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseDescription" class="control-label"></label>
                            <div style="width:250px">
                <input asp-for="ExpenseDescription" class="form-control" />
                </div>

                <span asp-validation-for="ExpenseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                            <div style="width:250px">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
               </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                            <div style="width:250px">
                <input asp-for="Date" class="form-control" />
               </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="Create" />
            </div>
        </form>
    </div>
</div>

</div></div>
    <div class="rightAbout">
        <div class="AddExpenseImg">
            <img src="~/img/imgaddexpense1.png" />

        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
