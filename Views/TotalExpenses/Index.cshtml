@model IEnumerable<ExpenseTracker.Models.TotalExpense>

@{
    ViewData["Title"] = "Index";
}


@*<p class="mt-5 pt-5">
    <a asp-action="Create" class="Create">Create New</a>
</p>*@

<div class="mainscreen">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalExpenseLimit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalExpenseLimit)
            </td>
            <td>
               

                        <a asp-action="Edit" asp-route-id="@item.TotalExpenseId"><img src="~/img/imgedit.png" style="height:30px" /></a>
                        @*<a asp-action="Details" asp-route-id="@item.CategoryId">Details</a>*@

                        <a asp-action="Delete" asp-route-ID="@item.TotalExpenseId" onclick="return confirm('Are you sure you wish to Delete these total Expense limit?');"><img src="~/img/imgdelete.png" style="height:25px;margin-left:20px" /></a>
            
            </td>
        </tr>
}
    </tbody>
</table>

<p class="CreateButton">
    <a asp-action="Create">Add Total Expense Limit</a>
</p>
</div>